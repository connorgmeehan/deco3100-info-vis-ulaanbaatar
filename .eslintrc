{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": "airbnb-base",

  "env": {
    "browser": true
  },
  "plugins": [
    "babel",
    "class-property"
  ],
  "rules": {
    "no-console": "off",
    "semi": "off",
    "lines-between-class-members": "off",
    "import/newline-after-import":"off",
    "indent": "off",
    "no-this-before-super": "off",
    "no-plusplus": "off",
    
    "class-methods-use-this": "warn",
    "no-unused-vars": "warn",
    "no-trailing-spaces": "warn",
    "prefer-destructuring": "warn",
    "prefer-const": "warn",
    "max-len": "warn"
  }
}